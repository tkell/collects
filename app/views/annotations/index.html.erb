
<h1><%= @release.artist %> - <%= @release.title %> [<%= @release.label %>]</h1>

<img src="https://tide-pool.ca/tessellates/<%= @collection_name %>/images/<%= @release.external_id %>.jpg">
<ul>
  <% @release.tracks.each do |t| %>
    <li>
      <%= t.position %> - <%= t.title %>
    </li>
  <% end %>
</ul>

<% Annotation.annotation_types.keys.each do |a_type| %>
  <%= a_type %>
  <ul>
    <% @annotations_by_type.fetch(a_type, []).each do |a| %>
      <li>
        <%= a.body %>
        <%= button_to "X", release_annotation_path(a.release_id, a.id), method: :delete, data: {
                    turbo_method: :delete,
                    turbo_confirm: "Are you sure?"
                  } %>
      </li>
    <% end %>
  </ul>
<% end %>


<h4>new annotation</h>

<%= form_with model: @annotation do |form| %>
  <div>
    <%= form.label :annotation_type %> </br>
    <%= form.select :annotation_type, Annotation.annotation_types %> </br>
    <%= form.label :body %> </br>
    <%= form.text_field :body %> </br>
  <div>
    <%= form.submit %>
  </div>
<% end %>
